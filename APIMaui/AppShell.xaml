<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="APIMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:APIMaui"
    xmlns:vistas="clr-namespace:APIMaui.Vistas"
    Shell.FlyoutBehavior="Disabled"
    Title="APIMaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate vistas:Listado}"
        Route="Listado" />
    <ShellContent
        Title="Crear"
        ContentTemplate="{DataTemplate vistas:Create}"
        Route="CreatePage"/>

    <ShellContent
        Title="Editar"
        ContentTemplate="{DataTemplate vistas:EditarPersona}"
        Route="EditarPage"></ShellContent>
    <ShellContent
        Title="Detalles"
        ContentTemplate="{DataTemplate vistas:DetallesPersona}"
        Route="DetallesPage"></ShellContent>

</Shell>
